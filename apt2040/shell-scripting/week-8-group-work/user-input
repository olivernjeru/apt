#!/bin/bash

# Check if there are exactly three command-line arguments
if [ "$#" -ne 3 ]; then
    echo "Usage: $0 <num1> <num2> <num3>"
    exit 1
fi

# Extract the command-line arguments
num1="$1"
num2="$2"
num3="$3"

# Print the individual argument values
echo "Number 1: $num1"
echo "Number 2: $num2"
echo "Number 3: $num3"

# Perform addition
sum=$((num1 + num2 + num3))

# Print the sum
echo "The sum of the three numbers is: $sum"
