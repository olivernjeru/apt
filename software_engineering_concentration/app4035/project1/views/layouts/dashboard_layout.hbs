<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} - Hazbin Hotel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>

<body>

    <div class="hb-dashboard">
        <div class="hb-side-nav border-end">
            <div>
                {{!-- Conditional Sidebar for Admin vs Non-admin --}}
                {{#if (eq user.role "admin")}}
                <nav class="navbar navbar-light hb-bg-white">
                    <div class="hb-nav-padding d-flex justify-content-between align-items-center font-bold w-100">
                        <span class="navbar-brand mb-0 h4 fs-5">Hazbin Hotel | Admin Dashboard</span>
                        <a href="/logout" class="fs-6 hb-logout-btn"><i class="bi bi-person-fill me-2"></i>Log Out</a>
                    </div>
                </nav>
                
                <!-- Bottom Navbar (Tabs) -->
                <nav class="hb-nav-wrapper hb-bg-white">
                    <ul class="nav hb-nav-tabs hb-nav-padding ">
                        <li class="nav-item">
                            <a class="nav-link {{#if (eq activeRoute 'users')}}active{{/if}}" href="/admin/users">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-people-fill"
                                    viewBox="0 0 16 16">
                                    <path
                                        d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5.784 6A2.24 2.24 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.3 6.3 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1zM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5" />
                                </svg>
                                <span>Users</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{#if (eq activeRoute 'register')}}active{{/if}}" href="/admin/register-user">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square"
                                    viewBox="0 0 16 16">
                                    <path
                                        d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                    <path fill-rule="evenodd"
                                        d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                </svg>
                                <span>Register User</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                {{else if (eq user.role "housekeeping")}}
                <!-- Top Navbar -->
                <nav class="navbar navbar-light hb-bg-white">
                    <div class="hb-nav-padding d-flex justify-content-between align-items-center font-bold w-100">
                        <span class="navbar-brand mb-0 h4 fs-5">Hazbin Hotel | Housekeeping Dashboard</span>
                        <a href="/logout" class="fs-6 hb-logout-btn"><i class="bi bi-person-fill me-2"></i>Log Out </a>
                    </div>
                </nav>
                
                <!-- Bottom Navbar (Tabs) -->
                <nav class="hb-nav-wrapper hb-bg-white">
                    <ul class="nav hb-nav-tabs hb-nav-padding ">
                        <li class="nav-item">
                            <a class="nav-link {{#if (eq activeRoute 'housekeeping')}}active{{/if}}" href="/housekeeping">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-people-fill"
                                viewBox="0 0 16 16">
                                <path
                                    d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5.784 6A2.24 2.24 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.3 6.3 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1zM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5" />
                            </svg>
                            <span>Cleaning Requests</span>
                            </a>
                        </li>
                    </ul>
                </nav>

                {{else if (eq user.role "receptionist")}}
                <!-- Top Navbar -->
                <nav class="navbar navbar-light hb-bg-white">
                    <div class="hb-nav-padding d-flex justify-content-between align-items-center font-bold w-100">
                        <span class="navbar-brand mb-0 h4 fs-5 fw-bold">Hazbin Hotel | Reception Dashboard</span>
                        <a href="/logout" class="fs-6 hb-logout-btn"><i class="bi bi-person-fill me-2"></i>Log Out</a>
                    </div>
                </nav>
                
                <!-- Bottom Navbar (Tabs) -->
                <nav class="hb-nav-wrapper hb-bg-white">
                    <ul class="nav hb-nav-tabs hb-nav-padding ">
                        <li class="nav-item">
                            <a class="nav-link {{#if (eq activeRoute 'rooms')}}active{{/if}}" href="/reception/rooms">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-door-closed-fill"
                                    viewBox="0 0 16 16">
                                    <path
                                        d="M12 1a1 1 0 0 1 1 1v13h1.5a.5.5 0 0 1 0 1h-13a.5.5 0 0 1 0-1H3V2a1 1 0 0 1 1-1zm-2 9a1 1 0 1 0 0-2 1 1 0 0 0 0 2" />
                                </svg>
                                <span>Rooms</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{#if (eq activeRoute 'housekeeping')}}active{{/if}}"
                                href="/reception/housekeeping">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-people-fill"
                                    viewBox="0 0 16 16">
                                    <path
                                        d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5.784 6A2.24 2.24 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.3 6.3 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1zM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5" />
                                </svg>
                                <span>Housekeeping</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                {{/if}}
            </div>

        </div>

        {{!-- Render Dashboard Pages Here --}}
        <div class="hb-content hb-content-padding">
            {{{ body }}}
        </div>
    </div>

    <script src="/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>